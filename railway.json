{
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyMaxRetries": 3,
    "healthchecks": {
      "liveness": {
        "httpGet": {
          "path": "/api/health",
          "port": 3000
        },
        "initialDelaySeconds": 30,
        "periodSeconds": 30
      },
      "readiness": {
        "httpGet": {
          "path": "/api/games",
          "port": 3000
        },
        "initialDelaySeconds": 10,
        "periodSeconds": 5
      }
    }
  },
  "volumes": [
    {
      "name": "data",
      "path": "/app/data",
      "size": "10Gi"
    }
  ]
}
